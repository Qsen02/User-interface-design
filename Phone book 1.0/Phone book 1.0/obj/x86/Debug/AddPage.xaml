<Page
    x:Class="Phone_Book_1._0.AddPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Phone_Book_1._0"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Background="Cyan" Padding="40">
        
        <TextBlock Text="Add Contact" FontSize="40" />

        <TextBlock Text="Name" FontSize="20" />
        <TextBox x:ConnectionId='2' Name="boxName" FontSize="20" />

        <TextBlock Text="Phone" FontSize="20" />
        <TextBox x:ConnectionId='3' Name="boxPhone" FontSize="20" />

        <TextBlock Text="Picture" FontSize="20" />
        <TextBox x:ConnectionId='4' Name="boxPicture" FontSize="20" />

        <Button x:ConnectionId='5' Content="Add Contact" FontSize="20" Padding="20 10 20 10" Margin="0 20 0 0"                           />

    </StackPanel>
</Page>

