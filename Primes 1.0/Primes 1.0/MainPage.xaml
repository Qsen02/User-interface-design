<Page
    x:Class="Primes_1._0.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Primes_1._0"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Background="Yellow" Padding="50">
        
        <TextBlock Text="Primes 1.0" FontSize="70"/>

        <TextBlock Text="Limit" FontSize="40" Margin="0 20 0 0"/>
        <TextBox Name="primeLimit" FontSize="40" />
        <Button Content="Generate" FontSize="70" Padding="20 10" Margin="0 20 0 20" Click="GenerateNumbersHandler"/>

        <ListBox Name="primeNumbers" FontSize="40" Height="400"/>

    </StackPanel>
</Page>
